<article class="<%= item.layout %>">
  <% if (item.photos){ %>
    <%- partial('post/gallery') %>
  <% } %>
  <div class="post-content">
    <header>
      <%- partial('post/title') %>
    </header>
    <div class="entry">
      <% if (item.excerpt && index){ %>
        <%- item.excerpt %>
      <% } else { %>
        <%- item.content %>
      <% } %>
    </div>
    <footer>
      <%- partial('post/category') %>
      <%- partial('post/tag') %>
      <time datetime="<%= item.date.toDate().toISOString() %>"><%= item.date.format('MM DD, YYYY') %></time>
    </footer>
  </div>
  <%- partial('comment') %>
</article>