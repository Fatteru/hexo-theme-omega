.archive-title
  color color-meta
  font-weight normal
  padding 10px 50px
  margin -10px 0 -20px
  text-align center
  text-shadow 0 0 1px #fff  
  background #fff
  border-radius 5px

.archives
  background #fff
  border 1px solid #ddd
  color color-font
  margin 50px 0
  box-shadow 0 0 16px rgba(0,0,0,0.3)
  text-align justify
  position relative
  border-radius 5px
  &:before
    content ""
    position absolute
    top 0
    left 0
    width meta-width
    height 100%
    background linear-gradient(left, #ddd, #fff)

  .year
    color color-meta
    font 2em font-title
    position absolute
    top 15px
    left 20px

  article
    border-left 1px solid color-border
    margin 0 0 0 100px
    padding 15px 20px
    position relative
    &:before
      content ""
      position absolute
      bottom -6px
      left -5px
      width 7px
      height 7px
      border 1px solid color-border
      background #fff
      z-index 1
      transform rotate(45deg)

    &:last-of-type
      &:before
        display none

    .title
      font-family font-title
      font-weight normal
      line-height 1.1
      a
        color color-font

    footer
      color color-meta
      font-size 0.9em
      line-height 1.6em
      margin-top 5px
      a
        color color-meta
        &:hover
          color darken(color-meta, 20%)

      time
        &:before
          content "\f073"
          font-family font-icon
          padding-right 10px

      .cats, .tags
        margin-left 25px
        &:before
          font-family font-icon
          padding-right 10px

      .cats
        &:before
          content "\f07c"

      .tags
        &:before
          content "\f02c"

.archive
  box-shadow none
  border none
  margin-bottom 0
  overflow visible
  border-radius 0